From: William Douglas <william.douglas@intel.com>
Date: Mon, 16 Sep 2019 13:09:41 -0700
Subject: [PATCH] Try to load stateless path for lynx configs

---
 src/LYMain.c  | 12 ++++++++----
 src/LYStyle.c |  6 +++++-
 2 files changed, 13 insertions(+), 5 deletions(-)

diff --git a/src/LYMain.c b/src/LYMain.c
index 1d52bb6..d9efa06 100644
--- a/src/LYMain.c
+++ b/src/LYMain.c
@@ -1542,10 +1542,14 @@ int main(int argc,
      * If the configuration file is not available, inform the user and exit.
      */
     if (!LYCanReadFile(lynx_cfg_file)) {
-	fprintf(stderr,
-		gettext("\nConfiguration file \"%s\" is not available.\n\n"),
-		lynx_cfg_file);
-	exit_immediately(EXIT_FAILURE);
+	FREE(lynx_cfg_file);
+	StrAllocCopy(lynx_cfg_file, "/usr/share/defaults/lynx/lynx.cfg");
+	if (!LYCanReadFile(lynx_cfg_file)) {
+		fprintf(stderr,
+			gettext("\nConfiguration file \"%s\" is not available.\n\n"),
+			lynx_cfg_file);
+		exit_immediately(EXIT_FAILURE);
+	}
     }
 
     /*
diff --git a/src/LYStyle.c b/src/LYStyle.c
index 77be188..c927e7c 100644
--- a/src/LYStyle.c
+++ b/src/LYStyle.c
@@ -928,7 +928,11 @@ void init_color_styles(char **from_cmdline, const char *default_styles)
 	lynx_lss_file = find_lss_file(cp = user_lss_file);
 	*from_cmdline = 0;
     } else {
-	lynx_lss_file = find_lss_file(cp = DeConst(LYNX_LSS_FILE));
+		if (LYCanReadFile(DeConst(LYNX_LSS_FILE))) {
+			lynx_lss_file = find_lss_file(cp = DeConst(LYNX_LSS_FILE));
+		} else {
+			lynx_lss_file = find_lss_file(cp = "/usr/share/defaults/lynx/lynx.lss");
+		}
     }
     CTRACE1((tfp, "init_color_styles(%s)\n", NonNull(lynx_lss_file)));
 
