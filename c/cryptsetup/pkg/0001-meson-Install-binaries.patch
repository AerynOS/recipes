From: Reilly Brogan <reilly@reillybrogan.com>
Date: Thu, 15 May 2025 14:39:04 -0500
Subject: [PATCH] meson: Install binaries

---
 src/meson.build        | 9 ++++++---
 tokens/ssh/meson.build | 6 ++++--
 2 files changed, 10 insertions(+), 5 deletions(-)

diff --git a/src/meson.build b/src/meson.build
index 3fd1ff5b..ec0c627e 100644
--- a/src/meson.build
+++ b/src/meson.build
@@ -25,7 +25,8 @@ if get_option('cryptsetup')
         dependencies: cryptsetup_deps,
         link_with: libcryptsetup,
         link_args: link_args,
-        include_directories: includes_tools)
+        include_directories: includes_tools,
+        install: true)
 endif
 
 if get_option('veritysetup')
@@ -45,7 +46,8 @@ if get_option('veritysetup')
         dependencies: veritysetup_deps,
         link_with: libcryptsetup,
         link_args: link_args,
-        include_directories: includes_tools)
+        include_directories: includes_tools,
+        install: true)
 endif
 
 if get_option('integritysetup')
@@ -68,7 +70,8 @@ if get_option('integritysetup')
         dependencies: integritysetup_deps,
         link_with: libcryptsetup,
         link_args: link_args,
-        include_directories: includes_tools)
+        include_directories: includes_tools,
+        install: true)
 endif
 
 src_ssh_token_files = files(
diff --git a/tokens/ssh/meson.build b/tokens/ssh/meson.build
index dba1d761..cb9a1fd7 100644
--- a/tokens/ssh/meson.build
+++ b/tokens/ssh/meson.build
@@ -14,7 +14,8 @@ if get_option('ssh-token')
             ],
             link_with: libcryptsetup,
             link_args: token_link_args,
-            include_directories: includes_tools + ['..'])
+            include_directories: includes_tools + ['..'],
+            install: true)
     endif
 
     cryptsetup_ssh_files = files(
@@ -35,5 +36,6 @@ if get_option('ssh-token')
             pwquality,
         ],
         link_with: libcryptsetup,
-        include_directories: includes_tools + ['..'])
+        include_directories: includes_tools + ['..'],
+        install: true)
 endif
