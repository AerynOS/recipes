     [
-        WString::from_str(env!("PREFIX")) + L!("/bin"),
+        L!("/usr/local/bin").to_owned(),
+        L!("/usr/local/sbin").to_owned(),
         L!("/usr/bin").to_owned(),
-        L!("/bin").to_owned(),
+        L!("/usr/sbin").to_owned(),
     ]
 });
 
